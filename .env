# Cấu hình ứng dụng
APP_NAME="Movie Streaming"
APP_URL=http://localhost/movie-streaming
APP_ENV=development
APP_DEBUG=true

# Cấu hình Database
DB_HOST=localhost
DB_NAME=movie_streaming_db
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Cấu hình Session
SESSION_NAME=movie_streaming_session
SESSION_LIFETIME=86400

# Cấu hình Socket Server
SOCKET_HOST=0.0.0.0
SOCKET_PORT=8080

# Cấu hình Email
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

# Cấu hình thanh toán
MOMO_PARTNER_CODE=null
MOMO_ACCESS_KEY=null
MOMO_SECRET_KEY=null
MOMO_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api/create

# Giới hạn kích thước upload file (bytes)
MAX_UPLOAD_SIZE=524288000 # 500MB

# Timezone
APP_TIMEZONE=Asia/Ho_Chi_Minh